{
  "name": "ophthalmo-ai-practice-hub-monorepo",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm --workspace apps/frontend run dev",
    "dev:backend": "npm --workspace apps/backend run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "generate:types": "npx supabase gen types typescript --project-id hhdrrepogausvduqscmo > packages/types/src/supabase/dbTypes.ts"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "concurrently": "^9.2.0",
    "supabase": "^2.39.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=20"
  }
}
